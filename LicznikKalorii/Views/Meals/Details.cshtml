@model LicznikKalorii.Models.Meal

@{
    ViewData["Title"] = "Details";
}

<h1 style="font-family:Bahnschrift;color:darkgreen;margin-bottom:150px">Szczegóły</h1>

<div>
    <h4 style="font-family:Bahnschrift;color:darkgreen">Posiłek</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color:darkgreen">
            @Html.DisplayNameFor(model => model.MealName)
        </dt>
        <dd class="col-sm-10" style="color:darkolivegreen">
            @Html.DisplayFor(model => model.MealName)
        </dd>
        <dt class="col-sm-2" style="color:darkgreen">
            @Html.DisplayNameFor(model => model.Kcal)
        </dt>
        <dd class="col-sm-10" style="color:darkolivegreen">
            @Html.DisplayFor(model => model.Kcal)
        </dd>
        <dt class="col-sm-2" style="color:darkgreen">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10" style="color:darkolivegreen">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" style="text-decoration:none;color:darkgreen">Edytuj</a> |
    <a asp-action="Index" style="text-decoration:none;color:darkgreen">Powrót</a>
</div>
