@model LicznikKalorii.Models.Meal

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-family:Bahnschrift;color:darkgreen;margin-bottom:150px">Edytuj</h1>

<h4 style="font-family:Bahnschrift;color:darkgreen">Posiłek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="MealName" class="control-label" style="color:darkolivegreen"></label>
                <input asp-for="MealName" class="form-control" />
                <span asp-validation-for="MealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kcal" class="control-label" style="color:darkolivegreen"></label>
                <input asp-for="Kcal" class="form-control" />
                <span asp-validation-for="Kcal" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" style="margin-top:30px;margin-bottom:30px;border:0px;background-color:darkgreen;color:white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="text-decoration:none;color:darkgreen">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
