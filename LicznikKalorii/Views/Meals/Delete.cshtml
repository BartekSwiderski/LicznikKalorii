@model LicznikKalorii.Models.Meal

@{
    ViewData["Title"] = "Delete";
}

<h1 style="font-family:Bahnschrift;color:darkgreen;margin-bottom:150px">Usuń</h1>

<h3 style="font-family:Bahnschrift;color:darkgreen">Jesteś pewien, że chcesz usunąć ten posiłek?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color:darkgreen">
            @Html.DisplayNameFor(model => model.MealName)
        </dt>
        <dd class="col-sm-10" style="color:darkolivegreen">
            @Html.DisplayFor(model => model.MealName)
        </dd>
        <dt class="col-sm-2" style="color:darkgreen">
            @Html.DisplayNameFor(model => model.Kcal)
        </dt>
        <dd class="col-sm-10" style="color:darkolivegreen">
            @Html.DisplayFor(model => model.Kcal)
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index" style="text-decoration:none;color:darkgreen">Powrót</a>
    </form>
</div>
